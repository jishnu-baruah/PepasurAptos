# Aptos Devnet Configuration
# Copy this file to .env and fill in your values

# Admin private key (will be generated during aptos init)
# IMPORTANT: Never commit your actual private key to version control
ADMIN_PRIVATE_KEY=your_admin_private_key_here

# Admin account address (will be generated during aptos init)
ADMIN_ADDRESS=your_admin_address_here

# Server signer public key (ED25519 - 32 bytes hex)
# This is the public key of the server that will sign game settlements
# Generate with: aptos key generate --output-file server-key
SERVER_SIGNER_PUBKEY=your_server_signer_pubkey_here

# Fee recipient address (where house cut goes)
FEE_RECIPIENT=your_fee_recipient_address_here

# House cut in basis points (100 = 1%, 500 = 5%, 1000 = 10%)
# Default: 200 (2%)
# Maximum recommended: 2000 (20%)
HOUSE_CUT_BPS=200

# Network configuration
NETWORK=devnet

# Deployed contract address (object address from deployment)
CONTRACT_ADDRESS=your_contract_address_here